        "kafka-cluster:AlterGroup",
        "kafka-cluster:DescribeGroup"
      ],
      "Resource": "arn:aws:kafka:ap-south-1:494077377285:group/demo-cluster-1/429c9e01-d348-4915-9f94-e8b827997c9f-s3/order-producer-group"
